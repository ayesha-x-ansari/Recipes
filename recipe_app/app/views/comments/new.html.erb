<%= render 'message'%>
<% title @recipe.title %>
<div class="row"  >
  <div class="col=md-6 col-md-offset-3">
    <br>
    <br>
    <%= form_for @comment, url: recipe_comments_path   do |f| %>
      <div>
        <%= f.text_area :content %>
      </div>
      <%= f.hidden_field :recipe_id, value: @recipe.id %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <br>
      <p><%= f.submit 'Submit Comment', :class => 'btn btn-primary' %></p>
    <%end%>
  </div>
</div>
