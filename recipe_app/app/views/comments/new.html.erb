<%= render 'message'%>
<% title @recipe.title %>
<div class="row"  >
  <div class="col=md-6 col-md-offset-3">
    <br>
    <br>
    <h4> Add comment <%= @recipe.user.id %>  </h4>

    <%= form_for @comment, url: recipe_comments_path   do |f| %>
      <div>
        <%= f.text_area :content, rows: 6, cols:50%>
      </div>
      <div>
        <%= f.select :ratings, options_for_select([["1"], ["2"], ["3"], ["4"], ["5"]]) :ratings %>
      </div>
      <%= f.hidden_field :recipe_id, value: @recipe.id %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <br>
      <p><%= f.submit 'Submit Comment', :class => 'btn btn-primary' %></p>
    <%end%>
  </div>
</div>
