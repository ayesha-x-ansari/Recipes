<%= form_for @comment, url: recipe_comment_path(@recipe.id, @comment.id)   do |f| %>
Content: <%= f.text_area :content %>
<%= f.hidden_field :recipe_id, value: @recipe.id %>
<%= f.hidden_field :user_id, value: current_user.id %>
<p><%= f.submit %></p>
<%end%>


<h3> Edit Your Recipe </h3>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@recipe.errors.count, "error") %>
        prohibited this post from being saved:
      </h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col=md-6 col-md-offset-3">
    <h3> Add a comment for <%= @recipe.title %> recipe</h3>
      <%= form_for @comment, url: recipe_comments_path   do |f| %>
        Content: <%= f.text_area :content %>
        <%= f.hidden_field :recipe_id, value: @recipe.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <br><br>
      <p><%= f.submit %></p>
    <%end%>
  </div>
</div>
