<h2> Create A New Recipe </h2>
  <%= render 'form' %>


  <h3> Add Ingredients: </h3>
      <%= f.fields_for :ingredients do |ingredient|  %>
        <%= render   'ingredients_fields', f: ingredient %>
      <% end %>

      <div class="links">
        <%= link_to_add_association 'Add ingredients', f, :ingredients, class: "btn btn-success" %>
      </div>
      <br>
       <%= f.submit %>
<%end%>
